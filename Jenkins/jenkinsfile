pipeline {
    agent any
    stages {
    stage('Cloning Git') {
      steps {
        git([url: 'https://github.com/hosnikadour1/kubeadm.git', branch: 'main', credentialsId: 'github'])
 
      }
    }
   stage('deploy in kubeadm') {

   steps {
      sshagent(['kubeadm']) {
      sh "scp -o strictHostkeyChecking=no client-depl.yml ubuntu@52.87.159.191:/home/ubuntu"
       sh "scp -o strictHostkeyChecking=no server-depl.yml ubuntu@52.87.159.191:/home/ubuntu"
        sh "scp -o strictHostkeyChecking=no mongo-depl.yml ubuntu@52.87.159.191:/home/ubuntu"
        sh "scp -o strictHostkeyChecking=no mongo-secret.yml ubuntu@52.87.159.191:/home/ubuntu"
        sh "scp -o strictHostkeyChecking=no ingress-srv.yml ubuntu@52.87.159.191:/home/ubuntu"
        


      script{
        try{
          sh "ssh ubuntu@44.203.114.14 kubectl -n mern-app apply  -f . "
        }catch(error){
           
        }                                                    
      }
}

     }


    }
    }
}
   

    